From: Alexey Lukyanchuk <skif@skif-web.ru>
Date: Tue, 23 Apr 2019 16:57:29 +0300
Subject: [PATCH 1/1] package/freerdp: add depencies for kraftway GOST patch

Signed-off-by: Alexey Lukyanchuk <skif@skif-web.ru>
---
 package/freerdp/Config.in  | 4 ++++
 package/freerdp/freerdp.mk | 1 +
 2 files changed, 5 insertions(+)

diff --git a/package/freerdp/Config.in b/package/freerdp/Config.in
index 59bc18b672..b0f874824c 100644
--- a/package/freerdp/Config.in
+++ b/package/freerdp/Config.in
@@ -73,6 +73,8 @@ config BR2_PACKAGE_FREERDP_CLIENT_X11
 	depends on BR2_PACKAGE_XORG7
 	select BR2_PACKAGE_XLIB_LIBX11
 	select BR2_PACKAGE_XLIB_LIBXEXT
+	select BR2_PACKAGE_DCERPC
+	select BR2_PACKAGE_PCSC_LITE
 
 comment "server and X11 client need X.Org"
 	depends on !BR2_PACKAGE_XORG7
@@ -82,6 +84,8 @@ config BR2_PACKAGE_FREERDP_CLIENT_WL
 	default y
 	depends on BR2_PACKAGE_WAYLAND
 	select BR2_PACKAGE_LIBXKBCOMMON
+	select BR2_PACKAGE_DCERPC
+	select BR2_PACKAGE_PCSC_LITE
 
 endif
 
diff --git a/package/freerdp/freerdp.mk b/package/freerdp/freerdp.mk
index 0f32ff4718..8d16c29fcc 100644
--- a/package/freerdp/freerdp.mk
+++ b/package/freerdp/freerdp.mk
@@ -94,6 +94,7 @@ endif
 
 ifneq ($(BR2_PACKAGE_FREERDP_CLIENT_X11)$(BR2_PACKAGE_FREERDP_CLIENT_WL),)
 FREERDP_CONF_OPTS += -DWITH_CLIENT=ON
+FREERDP_DEPENDENCIES += dcerpc pcsc-lite
 endif
 
